<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ticketHeaderRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ticketNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="There are a total of 10 tickets"
        android:textColor="@color/textBlack"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/ticketsValidatedNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/yesGreen"
        android:text="5 of them are validated"/>

</LinearLayout>