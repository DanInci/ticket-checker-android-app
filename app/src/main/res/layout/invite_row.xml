<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/userRow"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_gravity="center_vertical"
        android:padding="16dp"
        android:background="@drawable/ic_invite" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            android:weightSum="100"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:id="@+id/organizationNameRow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvOrganizationName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Organization Name"
                    android:textColor="@color/textBlack"
                    android:gravity="bottom"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/invitedAtRow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Invited at "
                    android:textColor="@color/darkerGrey"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvInvitedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="12 Jan 2018"
                    android:textStyle="italic|bold"
                    android:textColor="@color/darkerGrey"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnAccept"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/btnDecline"
            android:layout_marginEnd="15dp"
            android:scaleType="fitCenter"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_check_green"
            android:visibility="visible"/>

        <ImageButton
            android:id="@+id/btnDecline"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_clear_red"
            android:visibility="visible"/>

        <ProgressBar
            android:id="@+id/loadingSpinner"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginEnd="25dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>

    </RelativeLayout>
</LinearLayout>